{
	"applications": {
		"gecko": {
			"id": "fingerprint_reader@maxopala.com.br"
		}
	},
	"manifest_version": 2,
	"name": "Fingerprint Reader",
	"version": "1.0",
	"description": "Suports developers to include fingerprint readers to web application.\n\nApp icon made by Freepik (http://www.freepik.com) from http://www.flaticon.com is licensed by CC 3.0 BY",
	"icons": {
		"48": "icons/fingerprint.svg"
	},
	"author": "Max Gontijo de Oliveira",
	"homepage_url": "https://github.com/maxopala/fingerprint-reader-web-extension",
	"permissions": [
		"webRequest",
		"tabs",
		"activeTab",
		"webNavigation",
		"nativeMessaging",
		"<all_urls>"
	],
	"background": {
		"scripts": [
			"background/background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content_scripts/js/verify_suport.js"
			],
			"css": [
				"content_scripts/css/lt_monitor_fingerprint.css"
			]
		}
	],
	"browser_action": {
		"default_icon": "icons/fingerprint.svg",
		"default_title": "Testar Leitor Digital",
		"default_popup": "browser_action/app.html"
	}
}
